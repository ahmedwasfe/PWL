<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/margin10">


    <TextView
        android:id="@+id/text_update_user_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_type"
        android:textColor="@color/colorButton"
        android:textSize="@dimen/textCardSize24"
        android:layout_margin="@dimen/margin12"
        android:padding="@dimen/margin8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/spinner_update_user_type"
        android:layout_width="@dimen/widthheight"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin10"
        android:padding="@dimen/margin5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_update_user_type" />

    <Button
        android:id="@+id/btn_update_user_type"
        android:layout_width="@dimen/widthheight"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/btn_bg"
        android:padding="14dp"
        android:text="@string/update_user_type"
        android:textColor="@color/colorWhite"
        android:textAllCaps="false"
        android:textSize="@dimen/margin16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinner_update_user_type" />

</androidx.constraintlayout.widget.ConstraintLayout>